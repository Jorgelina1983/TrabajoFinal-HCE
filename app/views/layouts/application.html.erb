                        <li class="submenu">
                          <a href="#"><i class="far fa-flag"></i> <span> Reportes </span> <span class="menu-arrow"></span></a>
                          <ul style="display: none;">
                            <li><a href="expense-reports.html"> Reporte de gastos </a></li>
                            <li><a href="invoice-reports.html"> Reporte de pacientes </a></li>
                          </ul>
                        </li>
                        <li>
                            <a href="settings.html"><i class="fa fa-cog"></i> <span>Configurar</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div class="content">
              <%= yield %>
            </div>
        </div>
