    <div class="sidebar-overlay" data-reff=""></div>

    <script src=<%= asset_url("app.js") %>></script>
    <script src=<%= asset_url("Chart.bundle.js") %> ></script>
    <script src=<%= asset_url("chart.js") %> ></script>
    <script src=<%= asset_url("popper.min.js") %>> </script>
    <script src=<%= asset_url("bootstrap.min.js") %>> </script>
    <script src=<%= asset_url("jquery.slimscroll.js") %>> </script>
    <script src=<%= asset_url("moment.min.js") %>> </script>
    <script src=<%= asset_url("select2.min.js") %>> </script>
    <script src=<%= asset_url("bootstrap-datetimepicker.min.js") %>> </script>
  </body>
</html>
