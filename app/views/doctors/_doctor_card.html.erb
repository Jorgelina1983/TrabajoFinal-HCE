<div class="col-md-4 col-sm-4  col-lg-3">
  <div class="profile-widget">
      <div class="doctor-img">
        <% if doctor.avatar.present? %>
          <%= image_tag doctor.avatar, class:"avatar" %>
        <% else %>
          <%= image_tag asset_url("placeholder.png"), class:"avatar" %>
        <% end %>
      </div>

      <div class="dropdown profile-action">
          <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
          <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href=<%= edit_doctor_path(doctor) %>><i class="fas fa-pencil-alt m-r-5"></i> Editar </a>
              <a class="dropdown-item" href="#" data-toggle="modal" data-target=<%= "#delete_doctor_#{doctor.id}" %>>
                <i class="fas fa-trash-alt"></i>
                  Borrar
                </a>
          </div>
      </div>

      <h4 class="doctor-name text-ellipsis"><a href="profile.html"><%= doctor.full_name %></a></h4>
      <div class="doc-prof"><%= doctor.description %></div>
      <div class="user-country">
          <i class="fas fa-map-marker-alt"></i> <%= "#{ doctor.address }, Argentina" %>
      </div>
  </div>
  <div id=<%= "delete_doctor_#{doctor.id}" %> class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body text-center">
          <img src="<%= asset_url('sent.png') %>" alt="" width="50" height="46">
          <h3>EstÃ¡ seguro que desea eliminar este Doctor? <%"#{doctor.full_name}"%></h3>
          <div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Cerrar</a>
            <%= link_to("Borrar", doctor, method: :delete, class: "btn btn-danger") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
