
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:first_name, label: "Nombre", required: true, class: "form-control") %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:last_name, label: "Apellido", class: "form-control") %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input :email, label: "Email", required: true, class: "form-control" %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:dob, label: "Fecha de Nacimiento", hint: "YYYY/MM/dd", required: true, class: "form-control", start_year: Time.now.year - 90) %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <%= f.input(:address, label: "Dirección", class: "form-control") %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:phone, label: "Teléfono", class: "form-control")%>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label>Avatar</label>
            <div class="profile-upload">
                <div class="upload-img">
                    <img alt="" src="<%= asset_url("user.jpg") %>">
                </div>
                <div class="upload-input">
                    <%= f.file_field :avatar, label: "Avatar", class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <div class="form-check">
                <%= f.input(:gender,
                        label: "Género",
                        as: :radio_buttons,
                        label_method: :last,
                        collection: [[false, "Femenino"], [false, "Masculino"]],
                        class: "form-control form-check-input"
                    )
                %>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:identification, label: "Matrícula", class: "form-control") %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.input(:description, label: "Especialidad", class: "form-control") %>
        </div>
    </div>
    <div class="form-group">
			<div class="form-check">
					<%= f.input(:active,
									label: "Estado",
									as: :radio_buttons,
									label_method: :last,
									collection: [[false, "Activo"], [false, "Inactivo"]],
									class: "form-control form-check-input"
							)
					%>
			</div>
    </div>
</div>

