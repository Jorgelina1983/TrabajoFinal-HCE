            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Agregar Doctor</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <%= simple_form_for @doctor do |f| %>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.input(:first_name, label: "Nombre", required: true, class: "form-control") %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.input(:last_name, label: "Apellido", class: "form-control") %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.simple_fields_for :user do |user| %>
                                            <%= user.input(:name, label: "Usuario", required: true, class: "form-control")%>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                         <%= f.simple_fields_for :user do |user| %>
                                            <%= user.input(:email, label: "Email", required: true, class: "form-control")%>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.simple_fields_for :user do |user| %>
                                            <%= user.input(:password, label: "Contraseña", required: true, class: "form-control")%>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.simple_fields_for :user do |user| %>
                                            <%= user.input(:password_confirmation, label: "Confirmar Contraseña", required: true, class: "form-control")%>
                                        <% end %>
                                    </div>
                                </div>
								<div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.input(:dob, label: "Fecha de Nacimiento", hint: "YYYY/MM/dd", required: true, class: "form-control") %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group gender-select">
                                        <div class="form-check">
                                            <%= f.input(:gender,
                                                    label: "Género",
                                                    as: :radio_buttons,
                                                    label_method: :last,
                                                    collection: [[false, "Femenino"], [false, "Masculino"]],
                                                    class: "form-control form-check-input"
                                                )
                                            %>
                                        </div>
									</div>
                                </div>
								<div class="col-sm-12">
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
                                                <%= f.input(:address, label: "Direccion", class: "form-control") %>
											</div>
										</div>
                                    </div>
								</div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Teléfono </label>
                                        <input class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
										<label>Avatar</label>
										<div class="profile-upload">
											<div class="upload-img">
												<img alt="" src="<%= asset_url("user.jpg") %>">
											</div>
											<div class="upload-input">
												<input type="file" class="form-control">
											</div>
										</div>
									</div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Matrícula</label>
                                        <input class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
							<div class="form-group">
                                <label>Biografía</label>
                                <textarea class="form-control" rows="3" cols="30"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="display-block">Estado</label>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="status" id="doctor_active" value="option1" checked>
									<label class="form-check-label" for="doctor_active">
									Activo
									</label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="status" id="doctor_inactive" value="option2">
									<label class="form-check-label" for="doctor_inactive">
									Inactivo
									</label>
								</div>
                            </div>
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Crear Doctor</button>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
		</div>

    <script src="assets/javascript/jquery-3.2.1.min.js"></script>
	<script src="assets/javascript/popper.min.js"></script>
    <script src="assets/javascript/bootstrap.min.js"></script>
    <script src="assets/javascript/jquery.slimscroll.js"></script>
    <script src="assets/javascript/select2.min.js"></script>
	<script src="assets/javascript/moment.min.js"></script>
	<script src="assets/javascript/bootstrap-datetimepicker.min.js"></script>



