<tr>
	<td><img width="28" height="28" src=<%= asset_url("user.jpg") %> class="rounded-circle m-r-5" alt=""> <%= appointment.patient.full_name %></td>
	<td><%= appointment.patient.dob %></td>
	<td><%= appointment.doctor.full_name %></td>
	<td><%= appointment.department.name %></td>
	<td><%= appointment.date %></td>
	<td><%= appointment.time %></td>
	<td><%= appointment.duration %></td>
	<td>
		<% case appointment.status %>
		<% when "Pendiente" %>
			<span class="custom-badge status-green">Pendiente</span></td>
		<% when "Iniciada" %>
			<span class="custom-badge status-orange">Iniciada</span></td>
		<% when "Terminada" %>
			<span class="custom-badge status-blue">Terminada</span></td>
		<% when "Cancelada" %>
			<span class="custom-badge status-red">Cancelada</span></td>
		<% end %>
	<td class="text-right">
		<div class="dropdown dropdown-action">
			<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
			<div class="dropdown-menu dropdown-menu-right">
				<a class="dropdown-item" href=<%= edit_appointment_path(appointment.id) %>><i class="fas fa-pencil-alt m-r-5"></i> Editar</a>
				<a class="dropdown-item" href="#" data-toggle="modal" data-target=<%= "#delete_appointment_#{ appointment.id }" %>><i class="fa fa-trash-o m-r-5"></i> Borrar</a>
			</div>
		</div>
	</td>
</tr>

<div id=<%= "delete_appointment_#{ appointment.id }" %> class="modal fade delete-modal" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body text-center">
				<img src="<%= asset_url('sent.png') %>" alt="" width="50" height="46">
				<h3>EstÃ¡ seguro que desea eliminar esta consulta? </h3>
				<div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Cerrar</a>
					<%= link_to("Borrar", appointment, method: :delete, class: "btn btn-danger") %>
				</div>
			</div>
		</div>
	</div>
</div>
